@model IEnumerable<Product>




<h1>Product list</h1>

<p>
    <a asp-action="Create">Create new product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)

            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
            <th>Edit category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id=@item.Id class="btn btn-warning">Edit</a> 
                </td>
                <td>
                    <a asp-action="Details" asp-route-id=@item.Id class="btn btn-primary">Details</a>
                </td>
                <td>
                    <form asp-controller="Product" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </td>
                <td>
                    <a asp-controller="ProductCategory" asp-action="Index" asp-route-productId=@item.Id class="btn btn-outline-warning">Edit product category</a>

                </td>
            </tr>
        }
    </tbody>
</table>