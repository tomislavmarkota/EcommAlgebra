@using EcommAlgebra.Data
@model UserViewModel 

<h2>Editing user : @Model.FirstName @Model.LastName</h2>

<form method="post" asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="UserId" type="hidden" />
    <div class="form-group col-6">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" placeholder="Enter first name..." class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" placeholder="Enter last name..." class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" type="email" placeholder="Enter email..." class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" placeholder="Enter address..." class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="SelectedRole" class="control-label"></label>
        <select asp-for="SelectedRole" asp-items="@Model?.AvailableRoles?.Select(r => new SelectListItem { Value = r.Name, Text = r.Name })" class="form-control">
        </select>
        <span asp-validation-for="SelectedRole" class="text-danger"></span>
    </div>
 

    <input class="btn btn-primary mt-4" type="submit" value="Update"/>

</form>
<div class="mt-4">
    <a asp-action="Index" >Back to users list</a>

</div>




@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

